{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/",
    "lang/"
  ],
  "exclude": [
    "node_modules/",
    "__sapper__/",
    "public/",
    "app/"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "lang/*": [
        "lang/*"
      ],
      "d/*": [
        "d/*"
      ]
    }
  }
}